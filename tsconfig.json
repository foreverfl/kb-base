{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "types": ["@docusaurus/types", "@types/react", "@types/react-dom"]
  },
  "include": [
    "docusaurus.config.js",
    "sidebars.js",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    ".docusaurus",
    "build"
  ]
}